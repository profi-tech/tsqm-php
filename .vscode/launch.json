    "version": "0.2.0",
    "configurations": [
        {
            "name": "PHP: Listen for Xdebug",
            "type": "php",
            "request": "launch",
            "port": 9003
        },
        {
            "name": "PHP: Launch php script",
            "type": "php",
            "request": "launch",
            "program": "${file}",
            "cwd": "${fileDirname}",
            "port": 0,
            "runtimeArgs": [
                "-dxdebug.start_with_request=yes"
            ],
            "env": {
                "XDEBUG_MODE": "debug",
                "XDEBUG_CONFIG": "client_port=${port}"
            }
        },
        {
            "name": "PHP: tsqm examples:greeter-start",
            "type": "php",
            "request": "launch",
            "program": "${workspaceRoot}/tsqm/console.php",
            "cwd": "${workspaceRoot}/tsqm",
            "args": [
                "examples:greeter-start",
                "Emin"
            ],
        },
    ]
}