{
    "name": "profi-tech/tsqm-php",
    "description": "Simple and reliable task runner",
    "license": "MIT",
    "type": "library",
    "autoload": {
        "psr-4": {
            "Tsqm\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/",
            "Examples\\": "examples/"
        }
    },
    "config": {
        "platform": {
            "php": "7.4"
        }
    },
    "require": {
        "php": ">=7.4",
        "ext-pdo": "*",
        "ext-json": "*",
        "ramsey/uuid": "^3.9",
        "php-di/php-di": "^6.4",
        "psr/log": "^1.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6",
        "vlucas/phpdotenv": "^5.6",
        "symfony/console": "^5.4",
        "squizlabs/php_codesniffer": "^3.10"
    },
    "scripts": {
        "test": "./vendor/bin/phpunit tests",
        "lint-psr12": "./vendor/bin/phpcs --standard=PSR12 ./src ./tests ./examples",
        "lint-psr12-fix": "./vendor/bin/phpcbf --standard=PSR12 ./src ./tests ./examples"
        
    }
}
