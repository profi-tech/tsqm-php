{
    "name": "em1nx/tsqm",
    "description": "Simple and reliable task runner",
    "license": "MIT",    
    "type": "library",
    "autoload": {
        "psr-4": {
            "Tsqm\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/",
            "Examples\\": "examples/"
        }
    },
    "config": {
        "platform": {
            "php": "7.4"
        }
    },
    "require": {
        "php": ">=7.4",
        "ramsey/uuid": "^4.2",
        "php-di/php-di": "^6.4",
        "psr/log": "^1.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6",
        "vlucas/phpdotenv": "^5.6",
        "symfony/console": "^5.4"
    },
    "scripts": {
        "test": "./vendor/bin/phpunit tests"
    }
}
